<!-- USERS -->
<mapper namespace="com.hr.mapper.UsersMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="usersMap" type="Users">
        <id column="U_ID" property="uId" jdbcType="VARCHAR" />
        <result column="U_NAME" property="uName" jdbcType="VARCHAR" />
        <result column="U_TRUE_NAME" property="uTrueName" jdbcType="VARCHAR" />
        <result column="U_PASSWORD" property="uPassword" jdbcType="VARCHAR" />
        <result column="MAK_ID" property="makId" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表所有字段 -->
    <sql id="allColumns">
        U_ID, U_NAME, U_TRUE_NAME, U_PASSWORD, MAK_ID
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findUsersAll" resultMap="usersMap">
        SELECT
        <include refid="allColumns" />
        FROM USERS
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findUsersByIds" resultMap="usersMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM USERS WHERE U_ID IN
        <foreach collection="list" index="index" item="uId" open="(" separator="," close=")">
            #{uId}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertUsers" parameterType="map">
        INSERT INTO USERS (
            U_ID, U_NAME, U_TRUE_NAME, U_PASSWORD, MAK_ID
        ) VALUES (
            #{uId},
            #{uName},
            #{uTrueName},
            #{uPassword},
            #{makId}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateUsers" parameterType="map">
        UPDATE USERS
        <set>
            <if test="uName != null">
                U_NAME = #{uName},
            </if>
            <if test="uTrueName != null">
                U_TRUE_NAME = #{uTrueName},
            </if>
            <if test="uPassword != null">
                U_PASSWORD = #{uPassword},
            </if>
            <if test="makId != null">
                MAK_ID = #{makId}
            </if>
        </set>
        WHERE U_ID = #{uId}
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteUsersById" parameterType="string">
        DELETE FROM USERS WHERE U_ID = #{uId}
    </delete>
    
